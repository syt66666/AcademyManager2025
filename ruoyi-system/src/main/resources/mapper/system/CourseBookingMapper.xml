<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.CourseBookingsMapper">

    <!-- 课程选课记录结果映射 -->
    <resultMap type="CourseBookings" id="CourseBookingsResult">
        <id     property="bookingId"      column="booking_id"      />
        <result property="studentId"      column="student_id"      />
        <result property="courseId"       column="course_id"       />
        <result property="bookAt"         column="book_at"         />
        <result property="proof"          column="proof" typeHandler="com.ruoyi.common.mybatis.JsonStringListTypeHandler"/>
        <result property="summary"        column="summary"         />
        <result property="status"         column="status"          />
        <result property="reviewer"       column="reviewer"        />
        <result property="reviewerComment" column="reviewer_comment"  />
        <result property="reviewTime"     column="review_time"     />
        <result property="organizer"      column="organizer"       />
        <result property="createdTime"    column="created_time"    />
        <result property="updatedTime"    column="updated_time"    />
    </resultMap>

    <!-- 课程选课记录DTO结果映射（包含课程和学生信息） -->
    <resultMap type="CourseBookingDTO" id="CourseBookingDTOResult">
        <id     property="bookingId"      column="booking_id"      />
        <result property="studentId"      column="student_id"      />
        <result property="studentName"    column="student_name"    />
        <result property="academy"        column="academy"         />
        <result property="major"          column="major"           />
        <result property="systemMajor"    column="system_major"    />
        <result property="studentClass"   column="student_class"   />
        <result property="studentSex"     column="student_sex"     />
        <result property="courseId"       column="course_id"       />
        <result property="courseName"     column="course_name"     />
        <result property="courseLocation" column="course_location" />
        <result property="courseType"     column="course_type"     />
        <result property="courseStart"    column="course_start"    />
        <result property="courseDeadline" column="course_deadline" />
        <result property="startTime"      column="start_time"      />
        <result property="endTime"        column="end_time"        />
        <result property="courseDescription" column="course_description" />
        <result property="pictureUrl"     column="picture_url"     />
        <result property="notes"          column="notes"           />
        <result property="organizer"      column="organizer"       />
        <result property="bookAt"         column="book_at"         />
        <result property="proof"          column="proof" typeHandler="com.ruoyi.common.mybatis.JsonStringListTypeHandler"/>
        <result property="summary"        column="summary"         />
        <result property="status"         column="status"          />
        <result property="reviewer"       column="reviewer"        />
        <result property="reviewerComment" column="reviewer_comment"  />
        <result property="reviewTime"     column="review_time"     />
    </resultMap>

    <!-- 基础查询SQL片段 -->
    <sql id="selectCourseBookingsVo">
        select booking_id, student_id, course_id, book_at, proof, summary, status, reviewer,
        reviewer_comment, review_time, organizer, created_time, updated_time
        from course_bookings
    </sql>

    <!-- 关联查询SQL片段（包含课程和学生信息） -->
    <sql id="selectCourseBookingsWithDetailsVo">
        select
        cb.booking_id,
        cb.student_id,
        s.student_name,
        s.academy,
        s.major,
        s.system_major,
        s.student_class,
        s.student_sex,
        cb.course_id,
        c.course_name,
        c.course_location,
        c.course_type,
        c.course_start,
        c.course_deadline,
        c.start_time,
        c.end_time,
        c.course_description,
        c.picture_url,
        c.notes,
        c.organizer,
        cb.book_at,
        cb.proof,
        cb.summary,
        cb.status,
        cb.reviewer,
        cb.reviewer_comment,
        cb.review_time
        from course_bookings cb
        left join courses c on cb.course_id = c.course_id
        left join stu_info s on cb.student_id = s.student_id
    </sql>

    <!-- 查询课程选课记录列表 -->
    <select id="selectCourseBookingsList" parameterType="CourseBookings" resultMap="CourseBookingsResult">
        <include refid="selectCourseBookingsVo"/>
        <where>
            <if test="studentId != null and studentId != ''">
                and student_id = #{studentId}
            </if>
            <if test="courseId != null">
                and course_id = #{courseId}
            </if>
            <if test="bookAt != null">
                and book_at = #{bookAt}
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
            <if test="reviewer != null and reviewer != ''">
                and reviewer like concat('%', #{reviewer}, '%')
            </if>
        </where>
        order by book_at desc
    </select>

    <!-- 查询课程选课记录列表（包含详情） -->
    <select id="selectCourseBookingsListWithDetails" parameterType="CourseBookingDTO" resultMap="CourseBookingDTOResult">
        <include refid="selectCourseBookingsWithDetailsVo"/>
        <where>
            <if test="studentId != null and studentId != ''">and cb.student_id = #{studentId}</if>
            <if test="studentName != null and studentName != ''">and s.student_name like concat('%', #{studentName}, '%')</if>
            <if test="courseId != null">and cb.course_id = #{courseId}</if>
            <if test="courseName != null and courseName != ''">and c.course_name like concat('%', #{courseName}, '%')</if>
            <if test="courseType != null">and c.course_type = #{courseType}</if>
            <if test="status != null and status != ''">and cb.status = #{status}</if>
            <if test="organizer != null and organizer != ''">and c.organizer like concat('%', #{organizer}, '%')</if>
        </where>
        ORDER BY
        CASE cb.status
        WHEN '待审核' THEN 1
        WHEN '未通过' THEN 2
        WHEN '已通过' THEN 3
        ELSE 4
        END,
        cb.book_at DESC
    </select>

    <!-- 查询课程选课记录列表（已提交状态） -->
    <select id="selectCourseBookingsListSubmitted" parameterType="CourseBookingDTO" resultMap="CourseBookingDTOResult">
        <include refid="selectCourseBookingsWithDetailsVo"/>
        <where>
            <if test="studentId != null and studentId != ''">and cb.student_id = #{studentId}</if>
            <if test="studentName != null and studentName != ''">and s.student_name like concat('%', #{studentName}, '%')</if>
            <if test="courseId != null">and cb.course_id = #{courseId}</if>
            <if test="courseName != null and courseName != ''">and c.course_name like concat('%', #{courseName}, '%')</if>
            <if test="courseType != null">and c.course_type = #{courseType}</if>
            <if test="status != null and status != ''">and cb.status = #{status}</if>
            <if test="organizer != null and organizer != ''">and c.organizer like concat('%', #{organizer}, '%')</if>
            and cb.status != '待审核'
        </where>
        ORDER BY
        CASE cb.status
        WHEN '未通过' THEN 1
        WHEN '已通过' THEN 2
        ELSE 3
        END,
        cb.book_at DESC
    </select>

    <!-- 根据ID查询课程选课记录 -->
    <select id="selectCourseBookingsById" parameterType="Long" resultMap="CourseBookingsResult">
        <include refid="selectCourseBookingsVo"/>
        where booking_id = #{bookingId}
    </select>

    <!-- 插入课程选课记录 -->
    <insert id="insertCourseBookings" parameterType="CourseBookings" useGeneratedKeys="true" keyProperty="bookingId">
        insert into course_bookings
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="studentId != null and studentId != ''">student_id,</if>
            <if test="courseId != null">course_id,</if>
            <if test="bookAt != null">book_at,</if>
            <if test="proof != null">proof,</if>
            <if test="summary != null">summary,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="reviewer != null">reviewer,</if>
            <if test="reviewerComment != null">reviewer_comment,</if>
            <if test="reviewTime != null">review_time,</if>
            <if test="organizer != null">organizer,</if>
            <if test="createdTime != null">created_time,</if>
            <if test="updatedTime != null">updated_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="studentId != null and studentId != ''">#{studentId},</if>
            <if test="courseId != null">#{courseId},</if>
            <if test="bookAt != null">#{bookAt},</if>
            <if test="proof != null">#{proof, typeHandler=com.ruoyi.common.mybatis.JsonStringListTypeHandler},</if>
            <if test="summary != null">#{summary},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="reviewer != null">#{reviewer},</if>
            <if test="reviewerComment != null">#{reviewerComment},</if>
            <if test="reviewTime != null">#{reviewTime},</if>
            <if test="organizer != null">#{organizer},</if>
            <if test="createdTime != null">#{createdTime},</if>
            <if test="updatedTime != null">#{updatedTime},</if>
        </trim>
    </insert>

    <!-- 更新课程选课记录 -->
    <update id="updateCourseBookings" parameterType="CourseBookings">
        update course_bookings
        <trim prefix="SET" suffixOverrides=",">
            <if test="studentId != null and studentId != ''">student_id = #{studentId},</if>
            <if test="courseId != null">course_id = #{courseId},</if>
            <if test="bookAt != null">book_at = #{bookAt},</if>
            <if test="proof != null">proof = #{proof, typeHandler=com.ruoyi.common.mybatis.JsonStringListTypeHandler},</if>
            <if test="summary != null">summary = #{summary},</if>
            <if test="summary == null">summary = null,</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="reviewer != null">reviewer = #{reviewer},</if>
            <if test="reviewerComment != null">reviewer_comment = #{reviewerComment},</if>
            <if test="reviewTime != null">review_time = #{reviewTime},</if>
            <if test="organizer != null">organizer = #{organizer},</if>
            <if test="createdTime != null">created_time = #{createdTime},</if>
            <if test="updatedTime != null">updated_time = #{updatedTime},</if>
        </trim>
        where booking_id = #{bookingId}
    </update>

    <!-- 专门的审核更新方法，只更新审核相关字段 -->
    <update id="updateCourseBookingsAudit" parameterType="CourseBookings">
        update course_bookings
        <trim prefix="SET" suffixOverrides=",">
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="reviewer != null">reviewer = #{reviewer},</if>
            <if test="reviewerComment != null">reviewer_comment = #{reviewerComment},</if>
            <if test="reviewTime != null">review_time = #{reviewTime},</if>
        </trim>
        where booking_id = #{bookingId}
    </update>

    <!-- 删除课程选课记录 -->
    <delete id="deleteCourseBookingsByIds" parameterType="String">
        delete from course_bookings where booking_id in
        <foreach item="bookingId" collection="array" open="(" separator="," close=")">
            #{bookingId}
        </foreach>
    </delete>

    <!-- 根据课程ID和学生ID删除选课记录 -->
    <delete id="deleteCourseBookingsByCourseAndStudent">
        DELETE FROM course_bookings
        WHERE course_id = #{courseId}
          AND student_id = #{studentId}
    </delete>

    <!-- 统计审核状态 -->
    <select id="countCourseBookingAuditStatus" resultType="map">
        SELECT SUM(CASE WHEN status = '待审核' THEN 1 ELSE 0 END) AS pending,
               SUM(CASE WHEN status = '已通过' THEN 1 ELSE 0 END) AS approved,
               SUM(CASE WHEN status = '未通过' THEN 1 ELSE 0 END) AS rejected
        FROM course_bookings
    </select>

    <!-- 检查是否已选课 -->
    <select id="checkIfCourseBooked" resultType="boolean">
        SELECT COUNT(1) > 0
        FROM course_bookings
        WHERE course_id = #{courseId}
          AND student_id = #{studentId}
    </select>

    <!-- 根据学生ID查询已选课程ID列表 -->
    <select id="selectCourseIdsByStudentId" resultType="long">
        SELECT DISTINCT course_id
        FROM course_bookings
        WHERE student_id = #{studentId}
    </select>

    <!-- 查询课程选课学生导出数据 -->
    <select id="selectCourseBookingExportList" parameterType="CourseBookingExportDTO" resultType="CourseBookingExportDTO">
        SELECT
        cb.student_id as studentId,
        s.student_name as studentName,
        s.academy,
        cb.status
        FROM course_bookings cb
        LEFT JOIN stu_info s ON cb.student_id = s.student_id
        <where>
            <if test="courseId != null">
                AND cb.course_id = #{courseId}
            </if>
        </where>
        ORDER BY cb.book_at DESC
    </select>

    <!-- 检查课程选课记录是否存在 -->
    <select id="checkCourseBookingExists" resultType="int">
        SELECT COUNT(1)
        FROM course_bookings
        WHERE course_id = #{courseId}
          AND student_id = #{studentId}
    </select>

    <!-- 检查课程选课记录是否存在（简单版本） -->
    <select id="checkCourseBookingSimple" resultType="map">
        SELECT 
            COUNT(1) > 0 as isBooked,
            booking_id as bookingId
        FROM course_bookings
        WHERE course_id = #{courseId}
          AND student_id = #{studentId}
        LIMIT 1
    </select>

</mapper>
