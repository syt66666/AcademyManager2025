    <sql id="selectCourseBookingsVo">
        select booking_id, student_id, course_id, book_at, proof, summary, status, reviewer,
        reviewer_comment, review_time, organizer, created_time, updated_time
        from course_bookings
    </sql>

    <sql id="selectCourseBookingsWithCourseVo">
        select cb.booking_id, cb.student_id, s.student_name, s.academy, s.major, s.system_major,
        s.student_class, s.student_sex, cb.course_id, c.course_name, c.course_type, c.course_category,
        c.course_start, c.course_deadline, c.course_location, c.start_time, c.end_time,
        c.course_description, c.picture_url, c.notes, c.course_credit,
        cb.book_at, cb.proof, cb.summary, cb.status, cb.reviewer, cb.reviewer_comment,
        cb.review_time, c.organizer, cb.created_time, cb.updated_time,cs.score_value
        from course_bookings cb
        left join stu_info s on cb.student_id = s.student_id
        left join courses c on cb.course_id = c.course_id
        left join course_score cs on cb.course_id = cs.course_id
    </sql>

