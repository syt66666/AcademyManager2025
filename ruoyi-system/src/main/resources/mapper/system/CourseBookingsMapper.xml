            <if test="reviewer != null  and reviewer != ''"> and cb.reviewer = #{reviewer}</if>
            <if test="reviewerComment != null  and reviewerComment != ''"> and cb.reviewer_comment = #{reviewerComment}</if>
            <if test="reviewTime != null "> and cb.review_time = #{reviewTime}</if>
            <if test="organizer != null  and organizer != ''"> and c.organizer = #{organizer}</if>
            <if test="createdTime != null "> and cb.created_time = #{createdTime}</if>
            <if test="updatedTime != null "> and cb.updated_time = #{updatedTime}</if>
        </where>
