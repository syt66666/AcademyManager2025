    <select id="checkCourseBookingSimple" resultType="Map">
        SELECT 
            COUNT(1) > 0 as booked,
            COALESCE(MAX(booking_id), 0) as bookingId
        FROM course_bookings
        WHERE course_id = #{courseId}
          AND student_id = #{studentId}
    </select>

    <select id="countCourseBookingAuditStatus" parameterType="String" resultType="Map">
        SELECT 
            COUNT(CASE WHEN cb.status = '未考核' THEN 1 END) as pending,
            COUNT(CASE WHEN cb.status = '已通过' THEN 1 END) as approved,
            COUNT(CASE WHEN cb.status = '未通过' THEN 1 END) as rejected,
            COUNT(*) as total
        FROM course_bookings cb
        LEFT JOIN courses c ON cb.course_id = c.course_id
        <where>
            <if test="organizer != null and organizer != ''">
                AND c.organizer = #{organizer}
            </if>
        </where>
    </select>

